<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cameraInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_camera_info"
    android:elevation="10dp">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera_info_title"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:contentDescription="@string/cerrar"
            android:src="@drawable/ic_close"
            app:tint="@android:color/white" />
    </RelativeLayout>

    <!-- DIVIDER -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- INFO BLOCK -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3">

        <!-- NOMBRE -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera_name_label"
                android:textSize="12sp"
                android:textColor="#AAFFFFFF"/>

            <TextView
                android:id="@+id/txtCameraName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_dash"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- CARRETERA -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera_road_label"
                android:textSize="12sp"
                android:textColor="#AAFFFFFF"/>

            <TextView
                android:id="@+id/txtCameraRoad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_dash"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <!-- KM -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera_km_label"
                android:textSize="12sp"
                android:textColor="#AAFFFFFF"/>

            <TextView
                android:id="@+id/txtCameraKm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_dash"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>

    <!-- ACTIONS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnDetails"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:layout_weight="1"
            android:text="@string/view_details"
            android:textStyle="bold"
            android:backgroundTint="@color/seid_yellow"
            android:textColor="@android:color/black"/>

        <ImageButton
            android:id="@+id/btnBookmark"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/bg_bookmark_button"
            android:contentDescription="@string/guardar_camara"
            android:src="@drawable/ic_bookmark"
            app:tint="@color/seid_yellow" />
    </LinearLayout>

</LinearLayout>
