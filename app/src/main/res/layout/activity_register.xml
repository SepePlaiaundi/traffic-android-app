<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_1">

    <!-- Spacer superior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/icon"/>

    <!-- Título -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtTitle"
        style="@style/Seid.Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:textColor="@android:color/white"
        android:layout_marginTop="@dimen/spacing_medium"/>

    <!-- Name -->
    <EditText
        android:id="@+id/etName"
        style="@style/Seid.EditText.Base"
        android:hint="@string/name"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginHorizontal="@dimen/spacing_screen"/>

    <!-- Email -->
    <EditText
        android:id="@+id/etEmail"
        style="@style/Seid.EditText.Email"
        android:hint="@string/email"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_screen"/>

    <!-- Password -->
    <EditText
        android:id="@+id/etPassword"
        style="@style/Seid.EditText.Password"
        android:hint="@string/password"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_screen"/>

    <!-- Confirm Password -->
    <EditText
        android:id="@+id/etConfirmPassword"
        style="@style/Seid.EditText.Password"
        android:hint="@string/confirm_password"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginHorizontal="@dimen/spacing_screen"/>

    <!-- Botón Register -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        style="@style/Seid.Button.Primary"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginHorizontal="@dimen/spacing_screen"
        android:text="@string/register"/>

    <!-- Volver a Login -->
    <TextView
        android:id="@+id/txtLogin"
        style="@style/Seid.Text.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_hint"
        android:textColor="@color/seid_hint"
        android:layout_marginTop="@dimen/spacing_medium"/>

    <!-- Spacer inferior -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
