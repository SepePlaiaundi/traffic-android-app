<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0F0F0F"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- HEADER -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Volver"
            app:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera_details_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- IMAGE -->
        <ImageView
            android:id="@+id/imgCamera"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerInside"
            android:background="#1E1E1E"
            android:contentDescription="Imagen cámara"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- SAVE BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingVertical="12dp"
            android:text="@string/save_camera"
            android:textAllCaps="false"
            app:backgroundTint="#1E1E1E"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/imgCamera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnSave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- INFO ROW -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <!-- NOMBRE -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/camera_name_label"
                            android:textSize="12sp"
                            android:textColor="#AAFFFFFF"/>

                        <TextView
                            android:id="@+id/txtName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Cámara A-8"
                            android:text="@string/placeholder_dash"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- CARRETERA -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/camera_road_label"
                            android:textSize="12sp"
                            android:textColor="#AAFFFFFF"/>

                        <TextView
                            android:id="@+id/txtRoad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="A-8"
                            android:text="@string/placeholder_dash"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- KM -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/camera_km_label"
                            android:textSize="12sp"
                            android:textColor="#AAFFFFFF"/>

                        <TextView
                            android:id="@+id/txtKm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="123.4"
                            android:text="@string/placeholder_dash"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- COORDINATES TITLE -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/coordinates_label"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <!-- COORDINATES -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/latitude_label"
                            android:textSize="12sp"
                            android:textColor="#AAFFFFFF"/>

                        <TextView
                            android:id="@+id/txtLat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="43.3423"
                            android:text="@string/placeholder_dash"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/longitude_label"
                            android:textSize="12sp"
                            android:textColor="#AAFFFFFF"/>

                        <TextView
                            android:id="@+id/txtLon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="-1.9782"
                            android:text="@string/placeholder_dash"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
